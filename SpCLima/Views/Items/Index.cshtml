@model IEnumerable<SpClima.Models.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Itens</h2>
<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Tipo</th>
            <th>Destaque</th>
            <th>Imagem</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.Tipo</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destaque)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagemUrl))
                    {
                        <img src="@Url.Content(item.ImagemUrl)" alt="@item.Titulo" style="max-height:50px;" />
                    }
                </td>
               <td>
                    <a asp-controller="Items" asp-action="Edit"  asp-route-id="@item.Id" class="text-secondary me-2" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Items" asp-action="Details" asp-route-id="@item.Id" class="text-info me-2" title="Detalhes">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id" class="text-danger" title="Excluir">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>