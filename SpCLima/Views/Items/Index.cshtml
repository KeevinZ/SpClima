@model IEnumerable<SpClima.Models.Item>

@{
    ViewBag.Title = "Itens";
}

<h2>Itens</h2>
<p>
    @Html.ActionLink("Novo Item", "Create", "Items", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Tipo</th>
            <th>Destaque</th>
            <th>Imagem</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Titulo</td>
            <td>@item.Descricao</td>
            <td>@item.Tipo</td>
            <td>
                @Html.DisplayFor(modelItem => item.Destaque)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagemUrl))
                {
                    <img src="@Url.Content(item.ImagemUrl)" alt="@item.Titulo" style="max-height:50px;" />
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-secondary" })
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info ml-1" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger ml-1" })
            </td>
        </tr>
    }
    </tbody>
</table>