@model SpClima.Models.Item

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1>@Model.Titulo</h1>
    
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Descrição:</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>
                
                <dt class="col-sm-3">Categoria:</dt>
                <dd class="col-sm-9">@Model.Categoria.Nome</dd>
                
                <dt class="col-sm-3">Destaque:</dt>
                <dd class="col-sm-9">@(Model.Destaque ? "Sim" : "Não")</dd>
            </dl>
            
            <h4>Preços</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Variação</th>
                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var variacao in Model.Variacoes)
                    {
                        <tr>
                            <td>@variacao.Nome</td>
                            <td>@variacao.Preco.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>