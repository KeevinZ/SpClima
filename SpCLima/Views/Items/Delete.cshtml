@model SpClima.Models.Item

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1>Excluir Item</h1>
    
    <div class="alert alert-danger">
        <h4>Tem certeza que deseja excluir este item?</h4>
        <p>Esta ação é irreversível e removerá todas as variações associadas.</p>
    </div>
    
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome:</dt>
                <dd class="col-sm-9">@Model.Titulo</dd>
                
                <dt class="col-sm-3">Categoria:</dt>
                <dd class="col-sm-9">@Model.Categoria.Nome</dd>
            </dl>
            
            <h5>Variações:</h5>
            <ul>
                @foreach (var variacao in Model.Variacoes)
                {
                    <li>@variacao.Nome - @variacao.Preco.ToString("C")</li>
                }
            </ul>
        </div>
    </div>
    
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>