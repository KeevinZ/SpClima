@model List<SpClima.ViewModels.GaleriaVM>

<div class="container py-5">
    <div class="row">
        @foreach (var grupo in Model)
{
    <h3 class="text-primary mb-4">@grupo.Tipo</h3>

    <div class="row mb-5">
            @foreach (var item in grupo.Items)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100" role="button" data-bs-toggle="modal" data-bs-target="#modalItem@item.Id">
                        <img src="@item.ImagemUrl" class="card-img-top" alt="@item.Titulo">
                        <div class="card-body">
                            <h5 class="card-title">@item.Titulo</h5>
                            <p class="card-text">@item.Descricao</p>
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="modalItem@item.Id" tabindex="-1" aria-labelledby="modalLabel@item.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel@item.Id">@item.Titulo</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                            </div>
                            <div class="modal-body">
                                <p>@item.Descricao</p>
                            </div>
                            <div class="modal-footer">
                                <a href="https://wa.me/SEU_NUMERO?text=Quero orçamento sobre: @item.Titulo" class="btn btn-success">
                                    Solicitar Orçamento
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    </div>
</div>
