@model List<SpClima.ViewModels.GaleriaVM>

<div class="container py-5">
    <div class="row">
        @foreach (var grupo in Model)
        {
            <h3 class="text-primary mb-4">@grupo.Tipo</h3>

            <div class="row mb-5">
                @foreach (var item in grupo.Items)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100" data-bs-toggle="modal" data-bs-target="#modalItem_@item.Id">
                            <img src="@item.ImagemUrl" class="card-img-top" alt="@item.Titulo">
                            <div class="card-body">
                                <h5 class="card-title">@item.Titulo</h5>
                                <p class="card-text">@item.Descricao</p>
                            </div>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="modalItem_@item.Id" tabindex="-1" aria-labelledby="modalLabel_@item.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="modalLabel_@item.Id">@item.Titulo</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                                    </div>

                                    <img src="@item.ImagemUrl" class="img-fluid mb-3" alt="@item.Titulo">

                                    <div class="modal-body">
                                        <p>@item.Descricao</p>

                                        <form method="post" asp-controller="Pedido" asp-action="Create">
                                            <input type="hidden" name="ItemId" value="@item.Id" />

                                            <div class="mb-3">
                                                <label class="form-label">Seu nome:</label>
                                                <input type="text" name="ClienteNome" class="form-control" required />
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Endereço:</label>
                                                <input type="text" name="ClienteEndereco" class="form-control" required />
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Telefone:</label>
                                                <input type="text" name="ClienteTelefone" class="form-control" required />
                                            </div>

                                            <div class="mb-3">
                                                <label class="form-label">Escolha a variação:</label>
                                                <select name="ItemVariacaoId" class="form-select" required>
                                                    <option value="">-- Selecione --</option>
                                                    @foreach (var v in item.Variacoes)
                                                    {
                                                        <option value="@v.Id">@v.Nome — R$ @v.Preco.ToString("N2")</option>
                                                    }
                                                </select>
                                            </div>

                                            <button type="submit" class="btn btn-primary w-100">Solicitar Orçamento</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
