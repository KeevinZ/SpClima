@model SpClima.ViewModels.ProdutoVM
@using System.Linq
@{
    ViewData["Title"] = "Detalhes dos Produtos";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">

            <!-- Imagem principal -->
            <div class="col-md-6">
                <img class="img-fluid mb-5 mb-md-0"
                     src="@(Model.Produto.Fotos.Any() 
                           ? Model.Produto.Fotos.First().ArquivoFoto 
                           : "https://dummyimage.com/600x700/dee2e6/6c757d.jpg")"
                     alt="@Model.Produto.Nome" />
            </div>

            <!-- Detalhes do produto -->
            <div class="col-md-6">
                <div class="small mb-1">
                    Categoria: @Model.Produto.Categoria.Nome
                </div>
                <h1 class="display-5 fw-bolder">
                    @Model.Produto.Nome
                </h1>

                @* <p class="lead">
                    @Model.Produto.
                </p> *@

                <!-- Aqui: serviços como badges -->
                @if (Model.Produto.Servico != null && Model.Produto.Servicos.Any())
                {
                    <div class="mb-4">
                        @foreach (var produto in Model.Produtos)
                        {
                            <span class="badge bg-light text-dark border me-2">
                                @produto.Nome
                                (<strong>Preço estimado:</strong>
                                  R$ @produto.Servico.Preco.ToString("N2"))
                            </span>
                        }
                    </div>
                }

                <div class="d-flex">
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Adicionar ao Carrinho
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Produtos Semelhantes</h2>
        <div class="row gx-4 gx-lg-5 
                    row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var produto in Model.Produtos)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <img class="card-img-top"
                             src="@(produto.Fotos.Any() 
                                   ? produto.Fotos.First().ArquivoFoto 
                                   : "https://dummyimage.com/450x300/dee2e6/6c757d.jpg")"
                             alt="@produto.Nome" />
                        <div class="card-body p-4 text-center">
                            <h5 class="fw-bolder">@produto.Nome</h5>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto"
                                   asp-controller="Home"
                                   asp-action="Details"
                                   asp-route-id="@produto.Id">
                                    Detalhes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
