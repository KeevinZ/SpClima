          </a>
          <div class="footer-contact pt-3">
            <p>A108 Adam Street</p>
            <p>New York, NY 535022</p>
            <p class="mt-3"><strong>Phone:</strong> <span>+1 5589 55488 55</span></p>
            <p><strong>Email:</strong> <span>info@example.com</span></p>
          </div>
          <div class="social-links d-flex mt-4">
            <a href=""><i class="bi bi-whatsapp"></i></a>
            <a href=""><i class="bi bi-facebook"></i></a>
          </div>
        </div>

        <div class="col-lg-2 col-md-3 footer-links">
          <h4>Useful Links</h4>
          <ul>
            <li><i class="bi bi-chevron-right"></i> <a href="#">Home</a></li>
            <li><i class="bi bi-chevron-right"></i> <a href="#">Sobre</a></li>
            <li><i class="bi bi-chevron-right"></i> <a href="#">Serviços</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container copyright text-center mt-4">
      <p>© <span>Copyright</span> <strong class="px-1 sitename">Dewi</strong> <span>All Rights Reserved</span></p>
      <div class="credits">
        Desenvolvido por 
        <a href="https://bootstrapmade.com/">Cauã Máximo</a> 
        <a href="https://bootstrapmade.com/">Gabriel Callegari</a> 
        <a href="https://bootstrapmade.com/">Kevin Davi</a>
      </div>
    </div>
  </footer>

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="~/vendor/php-email-form/validate.js"></script>
  <script src="~/vendor/aos/aos.js"></script>
  <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="~/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
  <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>

  <!-- Main JS File -->
  <script src="~/js/main.js"></script>
  
  <script>
    let servicosSelecionados = [];

    function toggleCarrinho() {
      const carrinho = document.getElementById('carrinhoSidebar');
      carrinho.classList.toggle('open');
    }

    function adicionarServico(servico) {
      servicosSelecionados.push(servico);
      atualizarCarrinho();
    }

    function atualizarCarrinho() {
      const lista = document.getElementById('lista-servicos');
      lista.innerHTML = '';
      servicosSelecionados.forEach(item => {
        const li = document.createElement('li');
        li.textContent = item;
        lista.appendChild(li);
      });
    }

    function enviarWhatsApp() {
      const numero = '5514996630863';
      const mensagem = `Olá! Gostaria de orçamento para os seguintes serviços:\n\n- ${servicosSelecionados.join('\n- ')}`;
      const url = `https://wa.me/${numero}?text=${encodeURIComponent(mensagem)}`;
      window.open(url, '_blank');
    }
    
    function fecharCarrinho() {
      document.getElementById('carrinho-lateral').classList.remove('aberto');
    }

    function removerItem(botao) {
      const card = botao.closest('.col-12');
      card.remove();
    }

    function mostrarCamposEspecificos(select) {
      const container = select.closest('.card-servico');
      const camposEspecificos = container.querySelector('.campos-especificos');
      const valor = select.value;
      camposEspecificos.innerHTML = '';

      if (valor === 'ar-condicionado') {
        camposEspecificos.innerHTML = `
          <label for="btus">BTUs:</label>
          <select class="form-select" name="btus">
            <option value="">Selecione</option>
            <option value="5000">5000</option>
            <option value="7000">7000</option>
            <option value="9000">9000</option>
            <option value="12000">12000</option>
            <option value="18000">18000</option>
            <option value="24000">24000</option>
            <option value="30000">30000</option>
            <option value="36000">36000</option>
          </select>
    
          <label for="ambiente">Ambiente:</label>
          <select class="form-select" name="ambiente">
            <option value="">Selecione</option>
            <option value="residencial">Residencial</option>
            <option value="comercial">Comercial</option>
          </select>
        `;
      } else if (valor === 'cortina-ar') {
        camposEspecificos.innerHTML = `
          <label for="diametro">Diâmetro:</label>
          <select class="form-select" name="diametro">
            <option value="">Selecione</option>
            <option value="90-100">90-100 CM</option>
            <option value="120-150">120-150 CM</option>
            <option value="180-200">180-200 CM</option>
            <option value="250">250 CM</option>
          </select>
        `;
      }
    }

    function adicionarAoCarrinho(tipoServico, imagem, preco) {
      const carrinho = document.getElementById("carrinho-itens");

      const servicoTexto = {
        instalacao: "Instalação",
        manutencao: "Manutenção",
        limpeza: "Limpeza"
      }[tipoServico] || "Outro";

      const card = document.createElement("div");
      card.className = "col-12";
      card.innerHTML = `
        <div class="service-item card-servico d-flex flex-column gap-2 p-2 shadow-sm rounded position-relative">
          <button class="btn btn-sm btn-danger btn-remover" onclick="removerItem(this)">
            <i class="bi bi-x"></i>
          </button>
          <div class="img" style="flex-shrink: 0;">
            <img src="${imagem}" class="img-fluid rounded"
              style="width: 80px; height: 80px; object-fit: cover;" alt="Imagem do serviço">
          </div>
          <div class="details w-100">
            <label>Tipo de serviço:</label>
            <p class="form-control-plaintext m-0">${servicoTexto}</p>

            <label for="produto">Tipo de produto:</label>
            <select class="form-select" onchange="mostrarCamposEspecificos(this)">
              <option value="">Selecione</option>
              <option value="ar-condicionado">Ar-condicionado</option>
              <option value="maquina-lavar">Máquina de lavar</option>
              <option value="geladeira">Geladeira</option>
              <option value="cortina-ar">Cortina de ar</option>
              <option value="freezer">Freezer</option>
              <option value="bebedouro">Bebedouro</option>
            </select>

            <div class="campos-especificos"></div>

            <label for="preco">Preço:</label>
            <input type="text" class="form-control" value="${preco}" readonly>
          </div>
        </div>
      `;

      carrinho.appendChild(card);
      document.getElementById("carrinhoSidebar").style.display = "block";
    }

    function fecharCarrinho() {
      const carrinhoSidebar = document.getElementById("carrinhoSidebar");
      carrinhoSidebar.style.display = "none";
    }
  </script>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>