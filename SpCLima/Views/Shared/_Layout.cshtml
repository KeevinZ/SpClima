  <!-- Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect">
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-..." crossorigin="anonymous">
  <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="~/vendor/aos/aos.css" rel="stylesheet">
  <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">


  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />

  <!-- Main CSS File -->
  <link href="~/css/main.css" rel="stylesheet">
</head>

<body class="index-page">

  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center">

      <a href="index" class="logo d-flex align-items-center me-auto">
        <h1 class="sitename">SpClima</h1>
      </a>

      <nav id="navmenu" class="navmenu">
        <ul>
          <li><a href="#hero" class="active">Home</a></li>
          <li><a href="#services">Serviços</a></li>
          <li><a href="#features">Sobre</a></li>
          <li><a href="#contact">Contato</a></li>
          <li><a href="javascript:void(0);" id="calcularBtusBtn">Calculadora BTUs</a></li>
        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>

      <a href="javascript:void(0);" class="btn btn-primary ms-5" onclick="abrirCarrinho()">Faça seu Orçamento</a>

    </div>

    <!-- The Modal -->
    <div id="calcularBtusModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h3 class="modal-title">Calcule o Ar Ideal</h3>
        <form id="btusForm">
          <div class="input-container">
            <label for="largura">Largura (m):</label>
            <input type="number" id="largura" name="largura" required placeholder="Digite a largura do ambiente">
          </div>
          <div class="input-container">
            <label for="comprimento">Comprimento (m):</label>
            <input type="number" id="comprimento" name="comprimento" required
              placeholder="Digite o comprimento do ambiente">
          </div>
          <div class="input-container">
            <label for="altura">Altura (m):</label>
            <input type="number" id="altura" name="altura" required placeholder="Digite a altura do ambiente">
          </div>
          <button type="submit" class="btn-calcular">Calcular</button>
        </form>
        <div id="resultadoBTUs" class="resultado-container">
          <h4>Resultado:</h4>
          <p id="resultadoTexto" class="resultado-texto"></p>
        </div>
      </div>
    </div>
  </header>

  <main class="main">
    @RenderBody()
  </main>

  <footer id="footer" class="footer dark-background">
    <div class="container footer-top">
      <div class="row gy-4">
        <div class="col-lg-4 col-md-6 footer-about">
          <a href="index.html" class="logo d-flex align-items-center">
            <span class="sitename">SPCLIMA</span>
          </a>
          <div class="footer-contact pt-3">
            <p>R. Palmiro Sancassani, 30</p>
            <p>Igaraçu do Tietê, São Paulo</p>
            <p class="mt-3"><strong>Phone:</strong> <span>+55 14 99757-6049</span></p>
            <p><strong>Email:</strong> <span>sahpereira33@gmail.com</span></p>
          </div>
          <div class="social-links d-flex mt-4">
            <a href=""><i class="bi bi-whatsapp"></i></a>
            <a href=""><i class="bi bi-facebook"></i></a>
          </div>
        </div>

        <div class="col-lg-2 col-md-3 footer-links">
          <h4>Links úteis</h4>
          <ul>
            <li><i class="bi bi-chevron-right"></i> <a href="#hero">Home</a></li>
            <li><i class="bi bi-chevron-right"></i> <a href="#services">Serviços</a>
            <li><i class="bi bi-chevron-right"></i> <a href="#features">Sobre</a></li>

          </ul>
        </div>
      </div>
    </div>

    <div class="container copyright text-center mt-4">
      <p>© <span>Copyright</span> <strong class="px-1 sitename">Dewi</strong> <span>All Rights Reserved</span></p>
      <div class="credits">
        Desenvolvido por
        <a href="https://www.linkedin.com/in/caua-maximo?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"
          target="_blank" rel="noopener noreferrer">Cauã Máximo,
        </a>
        <a href="https://www.linkedin.com/in/gabriel-callegari-791b26318?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"
          target="_blank" rel="noopener noreferrer">Gabriel Callegari e
        </a>
        <a href="https://www.linkedin.com/in/kevin-hd?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"
          target="_blank" rel="noopener noreferrer">Kevin Davi.
        </a>
      </div>
    </div>
  </footer>

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-..."
    crossorigin="anonymous"></script>
  <script src="~/vendor/php-email-form/validate.js"></script>
  <script src="~/vendor/aos/aos.js"></script>
  <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="~/vendor/purecounter/purecounter_vanilla.js"></script>
  <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="~/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
  <script src="~/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        document.getElementById("btnAdmin").addEventListener("click", function () {
          new bootstrap.Modal(document.getElementById("loginModal")).show();
        });
    });
  </script>


  <!-- Main JS File -->
  <script src="~/js/main.js"></script>

  @RenderSection("Scripts", required: false)

  <!-- Carrinho Lateral -->
  <div id="carrinho" class="carrinho-lateral">
    <div class="carrinho-cabecalho d-flex justify-content-between align-items-center p-3 border-bottom">
      <h5 class="mb-0">Seu Orçamento</h5>
      <button class="btn-close" onclick="fecharCarrinho()"></button>
    </div>
    <div id="itensCarrinho" class="p-3"></div>
  </div>

  <!-- Floating Admin Button -->
  <button id="btnAdmin" class="fab-admin" title="Painel Admin"
    onclick="new bootstrap.Modal(document.getElementById('loginModal')).show()">>
    <i class="bi bi-shield-lock-fill"></i>
  </button>

  @await Html.PartialAsync("_LoginModal", new SpClima.ViewModels.LoginVM
{
  ReturnUrl = Url.Action("Index", "Admin", new { area = "Admin" })
})

</body>

</html>