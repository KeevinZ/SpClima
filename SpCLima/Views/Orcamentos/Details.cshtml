@model SpClima.Models.Orcamento
@{
    ViewData["Title"] = $"Detalhes do Orçamento #{Model.Id}";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Número:</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Data:</dt>
                <dd class="col-sm-9">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
                
                <dt class="col-sm-3">Valor Total:</dt>
                <dd class="col-sm-9">@Model.ValorTotal.ToString("C")</dd>
            </dl>
        </div>
    </div>
    
    <h4>Itens do Orçamento</h4>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Serviço</th>
                    <th>Variação</th>
                    <th>Preço Estimado</th>
                    <th>Preço Final</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrcamentoItems)
                {
                    <tr>
                        <td>@item.Item.Titulo</td>
                        <td>@item.Variacao.Nome</td>
                        <td>@item.PrecoEstimado.ToString("C")</td>
                        <td>@(item.PrecoFinal?.ToString("C") ?? "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>
