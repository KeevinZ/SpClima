@model IEnumerable<Orcamento>
@{
    ViewData["Title"] = "Lista de Orçamentos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Data</th>
                    <th>Itens</th>
                    <th>Valor Total</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var orcamento in Model) {
                <tr>
                    <td>@orcamento.Id</td>
                    <td>@orcamento.DataCriacao.ToString("dd/MM/yyyy")</td>
                    <td>@orcamento.OrcamentoItems.Count</td>
                    <td>@orcamento.ValorTotal.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@orcamento.Id" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>